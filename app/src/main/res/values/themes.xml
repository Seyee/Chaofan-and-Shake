<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChaofanAndShake" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/prim_login</item>
        <item name="colorPrimaryVariant">@color/prim_login</item>
        <item name="colorSecondary">@color/secon_login</item>
        <item name="colorSecondaryVariant">@color/secon_login</item>
        <item name="android:statusBarColor">@color/prim_login</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="TextAppearance.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TopCornersOnly">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Inside res/values/styles.xml -->
    <style name="ShapeAppearanceOverlay.SearchBar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Makes it fully rounded -->
    </style>

    <style name="MySearchBarShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="RoundedCornersLarge" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundedCornersTop" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="hehehe">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorHint">#000000</item>
    </style>

    <style name="Theme.ChaofanAndShake" parent="Base.Theme.ChaofanAndShake" />

    <!-- Base.Menu theme with fixed light -->
    <style name="Base.Theme.Menu" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Color kapag naka-click sa sidebar -->
        <item name="colorPrimary">@color/prim_login</item>
        <item name="colorPrimaryVariant">@color/prim_login</item>
    </style>

    <!-- Navigation theme -->
    <style name="Theme.Navigation" parent="Base.Theme.Menu">
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>
</resources>
