<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Check icon -->
    <ImageView
        android:id="@+id/imageCheck"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_check_circle"
        android:contentDescription="Success Icon" />

    <!-- Thank you text -->
    <TextView
        android:id="@+id/tvThankYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks for Your Purchase!"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp" />

    <!-- Subtext -->
    <TextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order placed successfully.\nWeâ€™ll let me know when you can pick it up"
        android:textColor="#808080"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="8dp" />

    <!-- Track Order button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTrackOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Order Status"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        app:cornerRadius="20dp"
        app:backgroundTint="#D4A437" />

    <!-- Back to Homepage button -->
    <Button
        android:id="@+id/btnBackHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back To Homepage"
        android:textAllCaps="false"
        android:backgroundTint="#B8B8B8"
        android:textColor="#000000"
        android:layout_marginTop="12dp" />

</LinearLayout>
